<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape
                    android:shape="oval"
                    android:height="@dimen/toggle_button_size"
                    android:width="@dimen/toggle_button_size">

                    <solid android:color="@color/selected_option_bg"/>

                    <size
                        android:height="@dimen/toggle_button_size"
                        android:width="@dimen/toggle_button_size" />


                </shape>
            </item>
            <item
                android:height="24dp"
                android:width="18dp"
                android:gravity="center"
                android:drawable="@drawable/ar_4_3" />
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:height="@dimen/toggle_button_size"
                android:width="@dimen/toggle_button_size">
                <shape android:shape="oval">
                    <solid android:color="@color/selected_option_bg"/>
                    <size
                        android:height="@dimen/toggle_button_size"
                        android:width="@dimen/toggle_button_size" />

                </shape>
            </item>

            <item
                android:height="32dp"
                android:width="18dp"
                android:gravity="center"
                android:drawable="@drawable/ar_16_9" />

        </layer-list>
    </item>
</selector>