<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <size
                android:width="84dp"
                android:height="84dp" />

            <padding
                android:bottom="28dp"
                android:left="28dp"
                android:right="28dp"
                android:top="28dp" />

            <stroke
                android:width="6dp"
                android:color="#ffffff" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <size
                android:width="16dp"
                android:height="16dp" />

            <solid android:color="#ff0000" />
        </shape>
    </item>

</layer-list>